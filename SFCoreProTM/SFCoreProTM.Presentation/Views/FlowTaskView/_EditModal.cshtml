@{
    var taskId = ViewBag.TaskId as Guid?;
    var flowTaskId = ViewBag.FlowTaskId as Guid?;
}

<form id="editFlowTaskForm">
    <input type="hidden" id="editFlowTaskWorkspaceId" name="workspaceId" value="" />
    <input type="hidden" id="editFlowTaskProjectId" name="projectId" value="" />
    <input type="hidden" id="editFlowTaskModuleId" name="moduleId" value="" />
    <input type="hidden" id="editFlowTaskTaskId" name="taskId" value="@taskId" />
    <input type="hidden" id="editFlowTaskId" name="flowTaskId" value="@flowTaskId" />
    
    <div class="mb-3">
        <label for="editFlowTaskName" class="form-label">Name</label>
        <input type="text" class="form-control" id="editFlowTaskName" name="name" required>
    </div>
    
    <div class="mb-3">
        <label for="editFlowTaskDescription" class="form-label">Description</label>
        <textarea class="form-control" id="editFlowTaskDescription" name="description" rows="3"></textarea>
    </div>
    
    <div class="mb-3">
        <label for="editFlowTaskSortOrder" class="form-label">Sort Order</label>
        <input type="number" class="form-control" id="editFlowTaskSortOrder" name="sortOrder" value="1" min="1">
    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id="editFlowTaskSubmitBtn">Update</button>
    </div>
</form>
