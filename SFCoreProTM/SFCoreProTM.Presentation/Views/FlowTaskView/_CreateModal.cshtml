@{
    var taskId = ViewBag.TaskId as Guid?;
}

<form id="createFlowTaskForm">
    <input type="hidden" id="flowTaskWorkspaceId" name="workspaceId" value="" />
    <input type="hidden" id="flowTaskProjectId" name="projectId" value="" />
    <input type="hidden" id="flowTaskModuleId" name="moduleId" value="" />
    <input type="hidden" id="flowTaskTaskId" name="taskId" value="@taskId" />
    
    <div class="mb-3">
        <label for="flowTaskName" class="form-label">Name</label>
        <input type="text" class="form-control" id="flowTaskName" name="name" required>
    </div>
    
    <div class="mb-3">
        <label for="flowTaskDescription" class="form-label">Description</label>
        <textarea class="form-control" id="flowTaskDescription" name="description" rows="3"></textarea>
    </div>
    
    <div class="mb-3">
        <label for="flowTaskSortOrder" class="form-label">Sort Order</label>
        <input type="number" class="form-control" id="flowTaskSortOrder" name="sortOrder" value="1" min="1">
    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id="createFlowTaskSubmitBtn">Create</button>
    </div>
</form>
