<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SFCoreProTM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loader.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <div id="global-loader"></div>

    @* 1. Panggil Header Partial View DI ATAS wrapper utama *@
    <partial name="_Header" />

    @* 2. Buat wrapper baru untuk Sidebar dan Konten Utama *@
    <div class="main-wrapper">

        @* 3. Sidebar Partial View di dalam wrapper *@
        <partial name="_Sidebar" />

        <div id="sidebarOverlay" class="sidebar-overlay"></div>

        @* 4. Main Content Area di dalam wrapper *@
        <main role="main"> @* Hapus class p-4 dari sini *@
            @RenderBody()
        </main>

    </div>

    @* Chat Panel *@
    @Html.PartialAsync("_PanelChat").GetAwaiter().GetResult()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.7/signalr.min.js"></script>
    @* JS Kustom *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="module" src="@Url.Content("/assets/js/core/services/apiInterceptor.js")" asp-append-version="true"></script>
    <script type="module" src="@Url.Content("/assets/js/core/utils/loader.js")" asp-append-version="true"></script>
    <script src="@Url.Content("/assets/js/core/utils/signalr-client.js")" asp-append-version="true"></script>
    <script src="@Url.Content("/assets/js/core/utils/chat-panel-sse.js")" asp-append-version="true"></script>
    <script src="@Url.Content("/assets/js/core/utils/sfcore-storage-service.js")" asp-append-version="true"></script>
    <script src="@Url.Content("/assets/js/core/utils/sfcore-workflow-process.js")" asp-append-version="true"></script>
    <script src="@Url.Content("/assets/js/core/utils/ChatTextAppender.js")" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>