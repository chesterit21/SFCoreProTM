@inject SFCoreProTM.Presentation.Services.ViteManifestService ViteManifest
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SFCoreProTM.Presentation</title>
    <script type="importmap"></script>
@{
        // 1. Dapatkan controller dan action saat ini
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();

        if (!string.IsNullOrEmpty(controller) && !string.IsNullOrEmpty(action))
        {
            // 2. Buat nama entry point yang cocok dengan manifest.json
            var actionLower = action.ToLowerInvariant();
            var entryPoint = $"views/{controller}/{actionLower}-main.js";
            
            // 3. Ambil semua path CSS yang dibutuhkan untuk entry point tersebut
            var cssFiles = ViteManifest.GetCssPathsForEntry(entryPoint);

            // 4. Render semua tag <link>
            foreach (var cssFile in cssFiles)
            {
                <link rel="stylesheet" href="~/pages/@cssFile" />
            }
        }
    }
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
 
    <div class="container">
        <main id="app" role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SFCoreProTM.Presentation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!-- Inject Vue script sesuai View name -->
     @await Html.PartialAsync("_InjectVueScript", ViewContext.RouteData.Values["controller"])
    <script src="~/pages/AppShell/index-main.js" asp-append-version="true"></script>
</body>
</html>
