@* Views/ProjectsMenu/Index.cshtml *@
@model IEnumerable<SFCoreProTM.Application.DTOs.Projects.ProjectSummaryDto> // Model jika menampilkan daftar proyek *@
@{
    ViewData["Title"] = "Projects";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
    var workspaceId = ViewData["WorkspaceId"] as Guid?;
    var workspaceName = "Workspace Name Placeholder"; // TODO: Dapatkan nama workspace
    ViewData["ActiveMenuId"] = "projects";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Projects in @workspaceName</h2>
    <div>
        @if (workspaceId.HasValue)
        {
            <a asp-action="Create" asp-controller="ProjectsMenu" asp-route-workspaceId="@workspaceId.Value"
                class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> New Project
            </a>
        }
        else
        {
            <button class="btn btn-primary" disabled title="Workspace ID not found">
                <i class="fas fa-plus me-1"></i> New Project
            </button>
        }
    </div>
</div>

<hr />

@* Area untuk menampilkan daftar proyek *@
@if (Model != null && Model.Any())
{
    <div class="list-group">
        <div class="row">
            @* Loop melalui Model untuk menampilkan proyek *@
            @foreach (var project in Model)
            {
                <div class="col-lg-6">
                    <div 
                        class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@project.Name </h5>
                            <div>
                                <button type="button" id="btn-edit-project" class="btn btn-sm btn-warning" onclick="window.location.href='@Url.Action("Edit", "ProjectsMenu", new { id = project.Id })'">edit</button>
                                <button type="button" id="btn-list-of-module" class="btn btn-sm btn-info" onclick="window.location.href='@Url.Action("Modules", "ProjectsMenu", new { id = project.Id })'">List of Modules</button>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(project.Description))
                        {
                            <p class="mb-1">@(project.Description.Length > 100 ? project.Description.Substring(0, 100) + "..." : project.Description)</p>
                        }
                        else
                        {
                            <p class="mb-1">No description available</p>
                        }
                        <small>Lead: N/A</small>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No projects found in this workspace yet. Click "New Project" to create one.
    </div>
}


