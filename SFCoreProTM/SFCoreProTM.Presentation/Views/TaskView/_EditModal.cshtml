@{
    var moduleId = ViewBag.ModuleId as Guid?;
    var taskId = ViewBag.TaskId as Guid?;
}

<form id="editTaskForm">
    <input type="hidden" name="moduleId" value="@moduleId" />
    <input type="hidden" name="taskId" value="@taskId" />

    <div class="mb-3">
        <label for="editName" class="form-label">Task Name</label>
        <input type="text" class="form-control" id="editName" name="name" required>
    </div>

    <div class="mb-3">
        <label for="editDescription" class="form-label">Description</label>
        <textarea class="form-control" id="editDescription" name="description" rows="3"></textarea>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="editSortOrder" class="form-label">Sort Order</label>
            <input type="number" class="form-control" id="editSortOrder" name="sortOrder" value="1" min="1">
        </div>
        <div class="col-md-6 mb-3">
            <div class="form-check form-switch mt-4 pt-2">
                <input class="form-check-input" type="checkbox" id="editIsErd" name="isErd">
                <label class="form-check-label" for="editIsErd">Is ERD Task?</label>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Update Task</button>
    </div>
</form>